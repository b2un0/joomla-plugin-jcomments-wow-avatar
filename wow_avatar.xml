<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="jcomments" method="upgrade">
    <name>JComments - WoW Avatar</name>
    <author>Branko Wilhelm</author>
    <creationDate>Jul 2013</creationDate>
    <copyright>Copyright (c) 2013 - 2015 Branko Wilhelm. All rights reserved.</copyright>
    <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
    <authorEmail>branko.wilhelm@gmail.com</authorEmail>
    <authorUrl>www.z-index.net</authorUrl>
    <version>@REVISION@</version>
    <description>load player avatars directly from battle.net</description>
    <files>
        <filename plugin="wow_avatar">wow_avatar.php</filename>
    </files>
    <scriptfile>script.installer.php</scriptfile>
    <updateservers>
        <server type="extension" priority="1" name="JComments - WoW Avatar">https://raw.githubusercontent.com/z-index-net/joomla-plugin-jcomments-wow-avatar/master/updatestream.xml</server>
    </updateservers>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="mapping" type="list" default="name" label="Mapping" description="Select the User-Field for Mapping">
                    <option value="name">Name</option>
                    <option value="username">Username</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
